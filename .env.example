# ACP Agent Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Required ACP Configuration
# =============================================================================

# Whitelisted wallet private key (without 0x prefix) - used by both buyer and seller
WHITELISTED_WALLET_PRIVATE_KEY=your_whitelisted_wallet_private_key_here

# Seller Configuration (for Twitter Analysis Agent)
SELLER_ENTITY_ID=1
SELLER_AGENT_WALLET_ADDRESS=your_seller_agent_wallet_address_here

# Buyer Configuration (for requesting Twitter analysis)
BUYER_ENTITY_ID=2
BUYER_AGENT_WALLET_ADDRESS=your_buyer_agent_wallet_address_here

# Legacy configuration (for backward compatibility)
PRIVATE_KEY=your_wallet_private_key_here
AGENT_WALLET_ADDRESS=your_agent_wallet_address_here
ENTITY_ID=1

# =============================================================================
# Twitter Analysis API Configuration
# =============================================================================

# Your Twitter analysis API endpoint
ANALYZE_API_URL=http://0.0.0.0:8000/analyze-twitter-user
ANALYZE_API_TIMEOUT=50

# =============================================================================
# Optional: Additional Configuration
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode
DEBUG=true

# Logging level
LOG_LEVEL=INFO

# =============================================================================
# Instructions
# =============================================================================

# 1. Copy this file: cp .env.example .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit the .env file to version control
# 4. Ensure your .gitignore includes .env

# Required variables:
# - PRIVATE_KEY: Your wallet's private key
# - AGENT_WALLET_ADDRESS: Your agent's wallet address
# - ENTITY_ID: Your ACP agent's entity ID